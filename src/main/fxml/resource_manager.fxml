<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.ResourceManagerController">
   <children>
      <TextField fx:id="searchResourceField" promptText="filter resources" />
      <TableView fx:id="resourceTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
        <columns>
          <TableColumn fx:id="resourceTable_nameColumn" maxWidth="400.0" minWidth="200.0" prefWidth="-1.0" text="Name" />
          <TableColumn fx:id="resourceTable_quantityColumn" maxWidth="100.0" minWidth="60.0" prefWidth="-1.0" text="Quantity" />
            <TableColumn fx:id="resourceTable_availabilityColumn" maxWidth="100.0" minWidth="70.0" prefWidth="-1.0" text="Availability" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox spacing="10.0">
         <children>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="addResourceButton" mnemonicParsing="false" prefWidth="105.0" text="Add Resource" />
                        <TextField fx:id="resourceNameField" promptText="Resource name" />
                        <TextField fx:id="resourceQuantityField" prefWidth="60.0" promptText="quantity" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Button fx:id="deleteResourceButton" mnemonicParsing="false" prefWidth="105.0" text="Delete Resource" />
                        <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="minusOneButton" mnemonicParsing="false" prefWidth="32.0" text="-1" />
                              <Button fx:id="plusOneButton" mnemonicParsing="false" prefWidth="32.0" text="+1" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <Label fx:id="warningTag" text="Warning: warning zone" visible="false">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
   </padding>
</VBox>
