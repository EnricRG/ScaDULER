<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" spacing="100.0">
         <children>
            <VBox alignment="TOP_CENTER" spacing="5.0">
               <children>
                  <Label fx:id="nameTag" text="Course name: " />
                  <TextField fx:id="nameField" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Full Course name" VBox.vgrow="NEVER">
                     <tooltip>
                        <Tooltip fx:id="nameFieldTooltip" text="A name to identify this course. Format: a string of characters." />
                     </tooltip></TextField>
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="descriptionTag" text="Course description (Optional): " />
            <TextArea fx:id="descriptionField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Enter a course description" VBox.vgrow="ALWAYS">
               <tooltip>
                  <Tooltip fx:id="descriptionFieldTooltip" text="A description about this course. Format: a string of characters." />
               </tooltip></TextArea>
            <CheckBox fx:id="descriptionWrapCheckBox" alignment="CENTER" mnemonicParsing="false" text="Wrap Text">
               <tooltip>
                  <Tooltip fx:id="descriptionWrapCheckBoxTooltip" maxWidth="500.0" text="When checked, the text inside the description field will wrap around the edges of the box containing it and jump to next line (without inserting jump characters)." textAlignment="JUSTIFY" wrapText="true" />
               </tooltip></CheckBox>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="2.0">
         <children>
            <Label fx:id="warningTag" text="Warning: warning field." textFill="RED">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="System Italic" size="14.0" />
               </font>
            </Label>
            <HBox>
               <children>
                  <Button fx:id="finishFormButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Finish Form" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <tooltip>
                        <Tooltip fx:id="finishFormButtonTooltip" maxWidth="500.0" text="Click this button to finish this form. To cancel it, close this window instead." />
                     </tooltip>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
   </padding>
</VBox>
